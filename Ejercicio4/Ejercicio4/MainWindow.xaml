<Window x:Class="Ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 4 - Nivel de Seguridad" Height="250" Width="400">
    <Grid>
        <Label Content="Selecciona nivel de seguridad:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

        <RadioButton Content="Bajo" Name="rbBajo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <RadioButton Content="Medio" Name="rbMedio" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <RadioButton Content="Alto" Name="rbAlto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0"/>

        <Label Content="Contraseña:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <PasswordBox Name="pwdContraseña" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,150,0,0" Width="200"/>

        <Button Name="btnVerificar" Content="Verificar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,200,0,0" Width="100" Height="30" Click="btnVerificar_Click"/>
    </Grid>
</Window>
