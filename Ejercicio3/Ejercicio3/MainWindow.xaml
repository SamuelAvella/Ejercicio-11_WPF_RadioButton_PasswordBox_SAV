<Window x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 3 - Login" Height="250" Width="400">
    <Grid>
        <Label Content="Usuario:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtUsuario" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox Name="pwdContraseña" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,0,0" Width="200" MaxLength="8"/>

        <Button Name="btnLogin" Content="Iniciar sesión" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0" Width="100" Height="30" Click="btnLogin_Click"/>
    </Grid>
</Window>
